#:kivy 2.1.0
#: import Dashboard gui.screens.Dashboard
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: set icon_path 'gui/assets/icons/' # Define a variable for icon path

<RootWidget>:
    orientation: 'horizontal'
    id: root_widget
    screen_manager: screen_manager_id
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Sidebar (left column)
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.06
        
        # empty label for spacing
        Label:
            text: ''

        # home Btn
        Button:
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.switch_screen('home')

            Image:
                source: icon_path + 'home-symbol.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(30), dp(30)

        # engine Btn
        Button:
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.switch_screen('engine')

            Image:
                source: icon_path + 'engine-symbol.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(30), dp(30)

        # temp Btn
        Button:
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.switch_screen('temp')

            Image:
                source: icon_path + 'temp-symbol.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(30), dp(30)

        # fuel Btn
        Button:
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.switch_screen('fuel')

            Image:
                source: icon_path + 'fuel-symbol.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(30), dp(30)

        # battery Btn
        Button:
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.switch_screen('battery')

            Image:
                source: icon_path + 'battery-symbol.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(30), dp(30)

        # warning Btn
        Button:
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.switch_screen('warning')

            Image:
                source: icon_path + 'warning-symbol.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(30), dp(30)
        
        Label:
            text: ''

    # Right Column: Screen Manager
    ScreenManager:
        id: screen_manager_id
        size_hint_x: 0.94
        transition: NoTransition()